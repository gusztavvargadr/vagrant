directory = File.dirname(__FILE__)

load "#{directory}/../core/Vagrantfile"

Vagrant.configure("2") do |config|
  config.vm.define "server", primary: true do |config_vm|
    config_vm.vm.box = "gusztavvargadr/windows-server"
  end

  config.vm.define "server-core", autostart: false do |config_vm|
    config_vm.vm.box = "gusztavvargadr/windows-server-core"
  end

  config.vm.define "desktop", autostart: false do |config_vm|
    config_vm.vm.box = "gusztavvargadr/windows-11"
  end

  config.vm.define "desktop-10", autostart: false do |config_vm|
    config_vm.vm.box = "gusztavvargadr/windows-10"
  end

  config.vm.define "docker", autostart: false do |config_vm|
    config_vm.vm.box = "gusztavvargadr/docker-windows"
  end

  config.vm.define "docker-core", autostart: false do |config_vm|
    config_vm.vm.box = "gusztavvargadr/docker-community-windows-server-core"
  end

  config.vm.provision "shell", inline: <<-EOH
    cmd /c ver
    systeminfo
  EOH
end
