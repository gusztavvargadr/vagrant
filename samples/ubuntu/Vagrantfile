directory = File.dirname(__FILE__)

load "#{directory}/../../src/core.Vagrantfile"

Vagrant.configure("2") do |config|
  config.vm.define "server", primary: true do |config_vm|
    config_vm.vm.box = "gusztavvargadr/ubuntu-server"
  end

  config.vm.define "desktop", autostart: false do |config_vm|
    config_vm.vm.box = "gusztavvargadr/ubuntu-desktop"
  end

  config.vm.define "docker", autostart: false do |config_vm|
    config_vm.vm.box = "gusztavvargadr/docker-linux"
  end

  config.vm.provision "shell", inline: <<-EOH
    uname -a
    lsb_release -a
    lshw
  EOH
end
