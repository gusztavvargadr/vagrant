directory = File.dirname(__FILE__)

ENV["VAGRANT_PROVIDER_CPUS"] = "4"
ENV["VAGRANT_PROVIDER_MEMORY"] = "8192"
ENV["VAGRANT_PROVIDER_NESTED_VIRTUALIZATION"] = "true"

load "#{directory}/../core/Vagrantfile"

Vagrant.configure("2") do |config|
  config.vm.define "ubuntu", primary: true do |config_vm|
    config_vm.vm.box = "gusztavvargadr/ubuntu-server"
    config_vm.vm.hostname = "d11t-u06u"
  end

  config.vm.define "windows", autostart: false do |config_vm|
    config_vm.vm.box = "gusztavvargadr/windows-server"
    config_vm.vm.hostname = "d11t-w07s"
  end
end
